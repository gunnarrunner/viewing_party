<%= link_to "Find Top Rated Movies", '/movies', params: {top_movies: true} %>

  <%= form_with url: "/movies", method: :get, local: true do |form| %>
      <%= form.label :search, "Search by Movie Title" %>
      <p> <%= form.text_field :search %> </p>

      <%= form.submit "Search Movies!" %>
    <% end %>
